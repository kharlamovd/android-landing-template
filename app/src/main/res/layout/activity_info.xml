<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InfoActivity">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:layout_width="@dimen/about_icon_size"
        android:layout_height="@dimen/about_icon_size">
        <ImageView
            android:layout_width="@dimen/about_icon_size"
            android:layout_height="@dimen/about_icon_size"
            android:src="@drawable/template" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:text="@string/app_name"
        style="@style/header"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/appDescrView"
        android:text="@string/app_descr"
        android:textStyle=""
        android:textSize="16sp"
        android:padding="@dimen/padding_descr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/disclaimerButton"
        android:text="@string/disclaimer"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="2dp"
        android:id="@+id/privPolButton"
        android:text="@string/priv_policy"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>